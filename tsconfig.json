{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"module": "CommonJS",
		"moduleResolution": "Node",
		"baseUrl": "./",
		"allowJs": true,
		"declaration": true,
		"emitDeclarationOnly": false,
		"outDir": "./dist",
		"isolatedModules": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"strictPropertyInitialization": false,
		"skipLibCheck": true
	},
	"exclude": [
		"node_modules",
		"build.mjs"
	],
	"include": [
		"./src"
	],
	"files": [
		"./src/index.ts"
	]
}
